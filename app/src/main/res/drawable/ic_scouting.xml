<svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
    <!-- Magnifying glass circle -->
    <circle cx="10" cy="10" r="7" fill="none" stroke="#2c3e50" stroke-width="2"/>

    <!-- Plant inside magnifying glass -->
    <g transform="translate(10,10)">
        <!-- Main stem -->
        <path d="M0,-4 L0,2" stroke="#2ecc71" stroke-width="1.5" fill="none"/>

        <!-- Leaves on left -->
        <path d="M-2.5,-2 Q-1,-1 0,-1" stroke="#27ae60" stroke-width="1.2" fill="none"/>
        <path d="M-2,0 Q-1,1 0,1" stroke="#27ae60" stroke-width="1.2" fill="none"/>

        <!-- Leaves on right -->
        <path d="M2.5,-3 Q1,-2 0,-2" stroke="#27ae60" stroke-width="1.2" fill="none"/>
        <path d="M2,-0.5 Q1,0.5 0,0.5" stroke="#27ae60" stroke-width="1.2" fill="none"/>

        <!-- Soil/base -->
        <path d="M-3,2 L3,2" stroke="#8B4513" stroke-width="1.5" stroke-linecap="round"/>
    </g>

    <!-- Magnifying glass handle -->
    <line x1="15" y1="15" x2="21" y2="21" stroke="#2c3e50" stroke-width="2" stroke-linecap="round"/>
</svg>
